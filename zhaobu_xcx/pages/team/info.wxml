<import src="../../components/toast/toast.wxml"/>
<template is="toast" data="{{ ...$wux.toast }}"/>

<import src="../../components/loading/loading.wxml"/>
<template is="loading" data="{{ ...$wux.loading }}"/>

<template is="dialog" data="{{ ...$wux.dialog }}"/>
<import src="../../components/dialog/dialog.wxml"/>

<view class="page">
  <view class="page__bd" wx:if="{{team_info}}">
    <view class="weui-cells__title">团队信息</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">团队名称</view>
            </view>
            <view class="weui-cell__bd">
                <view class="weui-input" >{{ team_info.name }}</view>
            </view>
        </view>
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">创建者</view>
            </view>
            <view class="weui-cell__bd">
                <view class="weui-input" >{{ team_info.creator }}</view>
            </view>
        </view>
    </view>
  </view>

  <button wx:if="{{team_info}}" class="weui-btn" type="primary" bindtap="joinTeam">加入团队</button>

</view>