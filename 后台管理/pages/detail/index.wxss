/* pages/detail/index.wxss */
.modal{
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
    width: 100%;
    height: 100%; 
  }
  
  .modal-mask{
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 107;
    background-color: rgba(0,0,0,0.30);
  }
  
  
  
  .modal-layer{
    position: absolute;
    background: transparent;
    /* top: 50%;     */
    display: flex;
    flex-direction: column;
    z-index: 108;   
    box-shadow: 0 4rpx 14rpx rgba(0,0,0,.4);  
  }

  .right-page {
    width:100%;
    background:white;
  }

  .modal-footer{
    background: #ffffff;
    flex-direction: row;
    display: flex;
    align-items: center;
    width: 100%;  
    border-top : 1rpx solid #eee;   
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;  
}

.modal-close{
    color: #fff;
    font-size: 48rpx;
    position: absolute;
    right: 40rpx;
    top: 0;
    z-index: 98;
}
