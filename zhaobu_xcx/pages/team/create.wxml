<!--publish.wxml-->
<import src="../../components/toast/toast.wxml"/>
<template is="toast" data="{{ ...$wux.toast }}"/>

<import src="../../components/loading/loading.wxml"/>
<template is="loading" data="{{ ...$wux.loading }}"/>

<view class="page" style="height: 100%;">
  <form report-submit="true" bindsubmit="onSubmit">
    <view class="page__bd" style="padding-bottom: 66px">
      <view class="weui-cells" style="margin-top: 15px">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">团队名称</view>
            </view>
            <view class="weui-cell__bd">
                <input id="desc-input" name="name" class="weui-input" placeholder="请填写您团队的名称" />
            </view>
        </view>
      </view>
    </view>
  <button formType="submit" class="weui-btn" type="primary" style="position: absolute; top: {{screen_height - 46}}px; width: 100%; margin-top: 0">
    提交
  </button>
  </form>

</view>
