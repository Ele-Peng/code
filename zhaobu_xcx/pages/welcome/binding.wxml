<import src="../../components/toast/toast.wxml" />
<template is="toast" data="{{ ...$wux.toast }}" />

<!--pages/welcome/binding.wxml-->
<title></title>
<view style='height: 128rpx;position: fixed;'></view>
<view style='background: #FFF;width: 100%;height: 200rpx;'>
  <view style='line-height: 200rpx;padding-left: 25rpx;'>请完善您的账户信息</view>
</view>

<view style='background: #FFF;'>
  <form report-submit="true" bindsubmit="onSubmit">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">邀请码</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="invite" placeholder="请输入您的邀请码" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">昵称</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="name" placeholder="请输入您的昵称" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">公司名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="company" placeholder="请输入您的公司名称" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">品牌名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="brand" placeholder="请输入您的品牌名称" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="phone" placeholder="请输入手机号码" bindinput='onInputPhone' />
        </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">验证码</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="code" placeholder="请输入验证码" />
        </view>
        <view class="weui-cell__ft">
          <view class="weui-vcode-btn" bindtap="vcode" style="color: #FF9906;">{{ c2 || '获取验证码' }}</view>
        </view>
      </view>
      <view class='protocol-area'>
        <image src="../../assets/images/icon-check.png"></image>
        <navigator url="../../pages/helper/index">会员电子签约协议</navigator>
      </view>
       <view class='protocol-area'>
        <image src="../../assets/images/icon-check.png"></image>
        <navigator url="../../pages/helper/index">会员电子交易协议</navigator>
      </view>
    </view>
    <button formType="submit" class="weui-btn" type="primary" style="width: 100%;bottom: 0;position: fixed;background: #FF9906;border-radius: 0px;">
      提交绑定
    </button>
  </form>
</view>