<!--pages/pay/needs.wxml-->
<import src="../../components/toast/toast.wxml" />
<import src="../../components/loading/loading.wxml" />
<import src="../../components/dialog/dialog.wxml" />
<import src="../../components/prompt/prompt.wxml" />

<template is="toast" data="{{ ...$wux.toast }}" />
<template is="loading" data="{{ ...$wux.loading }}" />
<template is="dialog" data="{{ ...$wux.dialog }}" />
<title heading="{{ heading }}" lastUrl="{{ lastUrl }}"></title>
<form bindsubmit="formSubmit" style='position: fixed;width: 100%;'>
  <view class='pay-area'>
    <view class='original-left'>
      <view class='original-left-top'>需支付</view>
    </view>
    <view class='original-right-one'>
      <text><text class='right-only-money'>￥{{ amount }}</text></text>
    </view>
  </view>
  <view class='check-pay' style='margin-top: 136rpx;'>
    <view class='check-pay-simple' bindtap='checkPay_1'>
      <image class="check-pay-left" src='../../assets/images/icon-logo-in.png'></image>
      <text>积分支付</text>
      <image wx:if="{{ is_check_1 }}" class="check-pay-right" src='../../assets/images/icon-check.png' style='padding-left: 491rpx;'></image>
      <image wx:if="{{ !is_check_1 }}" class="check-pay-right" src='../../assets/images/icon-noncheck.png' style='padding-left: 491rpx;'></image>
    </view>
    <view class='check-pay-simple' bindtap='checkPay_2'>
      <image class="check-wechat-left" src='../../assets/images/icon-wechat.png'></image>
      <text>微信支付</text>
      <image wx:if="{{ is_check_2 }}" class="check-pay-right" src='../../assets/images/icon-check.png'></image>
      <image wx:if="{{ !is_check_2 }}" class="check-pay-right" src='../../assets/images/icon-noncheck.png'></image>
    </view>
    <view class='check-pay-simple' bindtap='checkPay_3'>
      <image class="check-card-left" src='../../assets/images/icon-cloth-card.png'></image>
      <text>找布卡<text style='color: #FC5656'>3</text>
      <text>次</text></text>
      <image wx:if="{{ is_check_3 }}" class="check-pay-right" src='../../assets/images/icon-check.png' style="padding-left: 450rpx;"></image>
      <image wx:if="{{ !is_check_3 }}" class="check-pay-right" style="padding-left: 450rpx;" src='../../assets/images/icon-noncheck.png'></image>
    </view>
  </view>
  <view class='credits-area'>
    <view class='credits-area-simple' bindtap='onCredits'>
      <text>会员特权</text>
      <view wx:if="{{ show_optional }}" class="weui-cell__ft weui-cell__ft_in-access-up credits-right" />
      <view wx:if="{{ !show_optional }}" class="weui-cell__ft weui-cell__ft_in-access-down credits-right" />
    </view>
    <view wx:if="{{ !show_optional }}">
      <view class='credits-table'>
        <view class='credits-table-left'>青铜</view>
        <view class='credits-table-center'>黄金</view>
        <view class='credits-table-right'>钻石</view>
      </view>
      <view class='credits-table'>
        <view class='credits-table-left credits-color'>8折</view>
        <view class='credits-table-center credits-color'>6折</view>
        <view class='credits-table-right credits-color'>免费</view>
      </view>
      <view class='credits-table'>
        <view class='credits-table-left credits-color'>￥78.4</view>
        <view class='credits-table-center credits-color'>￥58.8</view>
        <view class='credits-table-right credits-color'>￥0.0</view>
      </view>
      <view class='credits-table'>
        <view class='credits-table-left credits-color'>已开通</view>
        <view class='credits-table-center'>去开通</view>
        <view class='credits-table-right'>去开通</view>
      </view>
    </view>
  </view>

  <view class="btn-area" style='position: fixed;bottom: 0;width: 100%;'>
    <button class="weui-btn" type="primary" style='background: #FF9906;border-radius: 0rpx;' bindtap='onSubmit'>确认支付</button>
  </view>
</form>