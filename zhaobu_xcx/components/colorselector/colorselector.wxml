<template name="colorselector">
  <view class="weui-mask {{ animateCss }}" wx:if="{{ visible }}"></view>
  <form report-submit="true" bindsubmit="bindSubmitColors">
	<view class="weui-colorselector {{ animateCss }}" wx:if="{{ visible }}">
    <view class="weui-dialog__ft">
      <button class="weui-dialog__btn weui-dialog__btn_primary" formType="submit">确定</button>
      <view class="weui-dialog__btn weui-dialog__btn_default" bindtap='bindCancelColors'>取消</view>
    </view>

    <scroll-view scroll-y class="weui-colorselector-container" style="height: {{scroll_height}}rpx">
      <view class="weui-colorselector-item" wx:for="{{ colors }}" wx:key="" style="background-color: {{background[index % 2]}}">
        <text class="weui-colorselector-itemname"> {{ item.code }} </text>
        <input name="{{item.id}}" value="{{item.count}}" type="digit" style="width: 150rpx" class="wux-number-input" />
        <view> {{unit}} </view>
      </view>
    </scroll-view>
  </view>
  </form>
</template>