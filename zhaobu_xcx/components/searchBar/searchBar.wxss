.modal {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 110;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 107;
  background-color: rgba(0, 0, 0, 0.30);
}

.modal-layer {
  position: absolute;
  background: transparent;
  /* top: 50%;     */
  display: flex;
  flex-direction: column;
  z-index: 108;
  box-shadow: 0 4rpx 14rpx rgba(0, 0, 0, 0.4);
}

