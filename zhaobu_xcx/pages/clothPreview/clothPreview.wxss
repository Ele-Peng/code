  .right-page {
    width:610rpx;
    height: 1334rpx;
    background:white;
    margin-left:140rpx;
  }

  .modal-footer{
    background: #ffffff;
    flex-direction: row;
    display: flex;
    align-items: center;
    width: 100%;  
    border-top : 1rpx solid #eee;   
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;  
}

.modal-close{
    color: #fff;
    font-size: 48rpx;
    position: absolute;
    right: 40rpx;
    top: 0;
