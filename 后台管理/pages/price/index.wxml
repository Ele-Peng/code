<!--pages/price/index.wxml-->
<import src="../../components/picker/picker.wxml" />
<template is="picker" data="{{ ...$wux.picker.matching }}" />
<import src="../../components/toast/toast.wxml" />
<template is="toast" data="{{ ...$wux.toast }}" />

<title heading="{{ heading}}" lastUrl="{{ lastUrl }}"></title>
<form report-submit="true" bindsubmit="onSubmit">
  <view class='priceArea'>
    <view class='priceGrid'>
      <label>大货单价</label>
      <input class="priceGrid-price" placeholder='请输入大货单价' type='digit' name="price"></input>
      <view class="priceGrid-unit" bindtap="choseUnit">
        <view class="weui-cell__bd">
          <text wx:if="{{ selected_matching_name.length > 0 }}" class="weui-input">{{selected_matching_name}}</text>
          <text wx:else class="weui-input weui-input_hint">单位</text>
        </view>
      </view>
    </view>

    <view class='priceGrid'>
      <label>样布单价</label>
      <input class="priceGrid-price" placeholder='请输入样布单价' type='digit' name="sample_price"></input>
      <view class="priceGrid-unit">
        <view class="weui-cell__bd">
          <text class="weui-input weui-input_hint">元/米</text>
        </view>
      </view>
    </view>
  </view>

  <button formType="submit" class="weui-btn" type="primary" style="position: fixed;width: 100%;bottom: 0;background: #FF9906;border-radius: 0px;">
    提交修改
  </button>
</form>